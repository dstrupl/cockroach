<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>core-tools</artifactId>
        <groupId>com.cisco.td.ade</groupId>
        <version>7.4-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>cockroach</artifactId>

    <properties>
        <java.long.version>11</java.long.version>
        <java.short.version>11</java.short.version>
        <kotlin-serialization.version>1.6.2</kotlin-serialization.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.cognitivesecurity</groupId>
            <artifactId>commons</artifactId>
        </dependency>

           <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>

        <dependency>
            <groupId>com.cisco.td.ade</groupId>
            <artifactId>kotlin-commons</artifactId>
        </dependency>

        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-csv</artifactId>
        </dependency>

        <dependency>
            <groupId>org.jetbrains.kotlinx</groupId>
            <artifactId>kotlinx-serialization-core-jvm</artifactId>
            <version>${kotlin-serialization.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlinx</groupId>
            <artifactId>kotlinx-serialization-json-jvm</artifactId>
            <version>${kotlin-serialization.version}</version>
        </dependency>

        <dependency>
            <groupId>com.cognitivesecurity</groupId>
            <artifactId>commons-testutils</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.cisco.td.ade</groupId>
            <artifactId>handlebars-wrapper</artifactId>
        </dependency>
        <dependency>
            <groupId>com.cisco.td.ade</groupId>
            <artifactId>easy-logging</artifactId>
        </dependency>

        <dependency>
            <groupId>com.cisco.td.ade</groupId>
            <artifactId>csv-reader</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <compilerPlugins>
                        <plugin>kotlinx-serialization</plugin>
                        <plugin>lombok</plugin>
                    </compilerPlugins>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.jetbrains.kotlin</groupId>
                        <artifactId>kotlin-maven-serialization</artifactId>
                        <version>${kotlin.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.projectlombok</groupId>
                        <artifactId>lombok</artifactId>
                        <version>${lombok.version}</version>
                        <scope>provided</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

</project>